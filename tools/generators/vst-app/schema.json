{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "NxVstApp",
  "title": "Create a Next.js based Viasat Application for Nx",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the application.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the application?",
      "pattern": "^[a-zA-Z].*$"
    }
  },
  "required": []
}
